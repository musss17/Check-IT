    <div class="flex justify-center items-center">
      
      <form class="bg-white py-4 px-6 shadow-md rounded-md mt-8" method="post">
        <div class="flex items-center space-x-2 font-semibold leading-8">
                <span class="tracking-wide text-xl">Edit</span>
        </div>
        <div class="text-gray-900">
            <div class="row-span text-lg">
                <div class="txt_field grid grid-cols-2">
                    <label class="block" for="name">Name</label>
                    <input name="name" value="#{user.name}" type="text" required>
                    <span></span>
                </div>
                <div class="txt_field grid grid-cols-2" >
                        <label class="block" for="gender">Gender</label>
                        <select class="rounded border border-gray-900 p-1 w-full" name="gender">
                            - var isMale = user.gender == "male"
                            <option value="male" #{isMale ? 'selected' : ''}>Male</option>
                            <option value="female" #{isMale ? '' : 'selected'}>Female</option>
                        </select>
                </div>
                <div class="txt_field grid grid-cols-2">
                    <label class="block" for="age">Age</label>
                    <input name="age" value="#{user.age}" type="number" required>
                    <span></span>
                </div>
                <div class="txt_field grid grid-cols-2">
                    <label class="block" for="age">Contact No.</label>
                    <input name="phone" value="#{user.phone}" type="text" required>
                    <span></span>
                </div>
                <div class="txt_field grid grid-cols-2">
                    <label class="block" for="email">Email</label>
                    <input name="email" value="#{user.email}" type="text" required>
                    <span></span>
                </div>
            </div>
        </div>
       
       
        <div class="flex row-span-3 justify-end" >
            <a class="px-4 py-2 bg-white rounded text-blue-500 text-lg mr-1" href="javascript:history.back()">Cancel</a>
            <input class="px-4 py-2 bg-blue-600 rounded text-white cursor-pointer" type="submit" value="Update">               
        </div>
            
        
      </form>
